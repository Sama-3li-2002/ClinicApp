<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="screen_title_style">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#091A20</item>
    </style>
    <style name="style_btn_clicked">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/shape_btn_clicked</item>
    </style>
    <style name="style_btn_unclicked">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#042D3B</item>
        <item name="android:background">@drawable/shape_btn_unclicked</item>
    </style>

    <style name="style_btn_time_reserved">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/shape_btn_time_reserved</item>
    </style>
    <style name="style_btn_time_unreserved">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/shape_btn_time_unreserved</item>
    </style>
    <style name="style_btn_time_clicked">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/shape_btn_time_clicked</item>
    </style>
    <style name="style_label_text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#1C95C0</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#7BC1DA</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#1C95C0</item>
    </style>

</resources>