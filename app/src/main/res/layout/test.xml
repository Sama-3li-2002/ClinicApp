<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backicon"
            android:layout_centerVertical="true"
/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/btn_back"
            android:text="@string/lbl_booking"
style="@style/screen_title_style"/>

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="26dp"
        app:cardCornerRadius="8dp"
app:cardElevation="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btn_evening"
            android:paddingVertical="9dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:text="@string/txt_btn_evening"
                style="@style/style_btn_unclick"
                android:paddingHorizontal="42dp"
                android:paddingTop="9dp"
                android:paddingBottom="6dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="@string/txt_btn_click"
                android:paddingHorizontal="42dp"
                android:paddingVertical="10dp"
                style="@style/style_btn_click"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="219dp"/>
    </androidx.cardview.widget.CardView>
 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     app:cardCornerRadius="8dp"
     android:layout_marginTop="10dp"
     app:cardElevation="8dp"
     android:layout_marginHorizontal="16dp"
     android:layout_height="wrap_content">
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="180dp"
         android:scaleType="centerCrop"
         android:foreground="#8DFDFBFB"
         android:src="@drawable/bacground2"

         />
   <TableLayout

       android:layout_width="match_parent"

       android:layout_marginHorizontal="11dp"
       android:layout_marginTop="22dp"
       android:layout_height="match_parent"
       >
       <TableRow>
       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="wrap_content"
           style="@style/style_btn_time_reserved"
           android:text="8:30AM"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="wrap_content"
           style="@style/style_btn_time_unreserved"
           android:text="8:30AM"
         android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="wrap_content"
           style="@style/style_btn_time_clicked"
           android:text="8:30AM"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
       </TableRow>
       <TableRow
           android:layout_marginTop="14dp"
           >
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               style="@style/style_btn_time_reserved"
               android:text="8:30AM"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               style="@style/style_btn_time_unreserved"
               android:text="8:30AM"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               style="@style/style_btn_time_clicked"
               android:text="8:30AM"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
       </TableRow>

   </TableLayout>

 </androidx.cardview.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="18dp"
    android:fontFamily="@font/roboto_medium"
    android:text="Booking Date"
    android:layout_marginStart="18dp"
    android:layout_height="wrap_content"/>
    <FrameLayout
        android:paddingHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/cv_appoitment"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#E8F2F5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_date_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C95C0"
                        android:textSize="24sp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="24"/>
                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9BABB1"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Wendesdey"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9BABB1"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Wed 24 Aug , 1:30PM"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_doctor_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="79dp"
                android:layout_height="107dp"
                app:riv_corner_radius="8dp"
                android:layout_marginStart="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </FrameLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginHorizontal="37dp"
            android:layout_marginTop="37dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/txt_btn_ok"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>



</ScrollView>
</LinearLayout>