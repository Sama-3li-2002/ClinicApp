<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/root_color"
    tools:context=".ui.fragments.EmptyAppointmentFragment">

    <RelativeLayout
        android:id="@+id/rl_appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon"
            android:padding="@dimen/_10sdp"/>

        <TextView
            style="@style/screen_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_back"
            android:text="@string/title_appointments" />

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/notification_alert_icon" />

    </RelativeLayout>

      <ImageView
          android:layout_width="@dimen/_255sdp"
          android:layout_height="@dimen/_200sdp"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_100sdp"
          android:src="@drawable/ic_empty_data"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/navyBlue"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/txt_empty_data"
        android:gravity="center"/>



</LinearLayout>