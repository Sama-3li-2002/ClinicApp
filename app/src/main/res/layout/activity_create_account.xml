<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CreateAccount">

    <ImageView
        android:layout_width="11dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"

        android:layout_marginStart="19dp"

        android:layout_marginTop="22dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="19dp"
        android:layout_weight="1"
        android:src="@drawable/back_icon" />

    <TextView
        android:layout_width="56dp"
        android:layout_height="24dp"

        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_bold"
        android:text="SIGNIN"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="291dp"
        android:layout_height="205dp"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo2" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"

        android:layout_below="@+id/iv_logo"

        app:cardElevation="10dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@+id/et_username"
                android:text="Username:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="301dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@id/et_emailenter"
                android:text="E_mail:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_emailenter"
                android:layout_width="301dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@+id/et_addres"
                android:text="Addres:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/et_addres"
                android:layout_width="301dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:inputType="numberPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@+id/et_phone"
                android:text="Phone:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="301dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:inputType="numberPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@id/et_passwordenter"
                android:text="Password:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_passwordenter"
                android:layout_width="301dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:inputType="numberPassword" />


            <Button
                android:id="@+id/btn_login"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:backgroundTint="#1C95C0"
                android:text="login"
                android:textColor="#F8F8F8"
                android:textSize="22sp" />


        </LinearLayout>
</ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>