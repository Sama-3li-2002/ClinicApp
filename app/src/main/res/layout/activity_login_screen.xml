<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginScreen">
<LinearLayout
    android:layout_width="200dp"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layoutDirection="ltr"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/backicon"
        android:layout_width="11dp"
        android:layout_height="12sp"/>
    <TextView
        android:layout_width="56dp"
        android:text="LOGIN"

        android:layout_weight="1"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:layout_height="24dp"/>

</LinearLayout>

<ImageView
    android:layout_width="291dp"
    android:layout_marginTop="24dp"
    android:src="@drawable/maskgro"
    android:layout_gravity="center"
    android:layout_height="205dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"

        android:layout_margin="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@id/et_emailenter"
                android:text="E_mail:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_emailenter"
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_medium"
                android:labelFor="@id/et_passwordenter"
                android:text="Password:"
                android:textColor="#1C95C0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_passwordenter"
                android:layout_width="301dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:inputType="numberPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right"

                android:text="Forget Paassword?"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#1C95C0"
                android:text="login"
                android:textColor="#F8F8F8"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="SIGNIN"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>
