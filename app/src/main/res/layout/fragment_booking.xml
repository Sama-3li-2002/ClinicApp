<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/root_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="@dimen/_35sdp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            style="@style/screen_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/btn_back"
            android:text="@string/title_booking" />

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chat" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">


          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="8dp"
              app:cardElevation="8dp"
              android:padding="5dp"
              android:layout_marginHorizontal="26dp"
              android:layout_marginTop="27dp"
              android:background="@color/white">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal"
                  android:layout_marginVertical="8dp">
                  <androidx.appcompat.widget.AppCompatButton
                      android:id="@+id/btn_evening"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/style_btn_unclicked"
                      android:text="@string/txt_btn_evening"
                      android:layout_marginEnd="15dp"/>
                  <androidx.appcompat.widget.AppCompatButton
                      android:id="@+id/btn_morning"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/style_btn_clicked"
                      android:text="@string/txt_btn_morning"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="8dp"
              app:cardElevation="8dp"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="10dp">
              <CalendarView
                  android:id="@+id/calendar"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:dateTextAppearance="@style/CalenderViewDateCustomText"
                  android:theme="@style/CalenderViewCustom"
                  android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
                  android:focusedMonthDateColor="@color/pink" />
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/cv_evening"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="8dp"
              app:cardElevation="8dp"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="10dp"
              android:visibility="gone">
              <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="155dp"
                      android:src="@drawable/img_blue_wave"
                      android:scaleType="centerCrop"
                      android:foreground="#C9FFFFFF"/>
              </FrameLayout>
              <TableLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="26dp"
                  android:layout_marginHorizontal="12dp">
                  <TableRow android:gravity="center_horizontal">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm1"
                          style="@style/style_btn_time_reserved"
                          android:text="8:30PM"
                          android:layout_marginEnd="10dp" />
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm2"
                          style="@style/style_btn_time_unreserved"
                          android:text="9:00PM"
                          android:layout_marginEnd="10dp"/>
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm3"
                          style="@style/style_btn_time_clicked"
                          android:text="9:30PM"/>
                  </TableRow>
                  <TableRow android:gravity="center_horizontal"
                      android:layout_marginTop="10dp">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm4"
                          style="@style/style_btn_time_unreserved"
                          android:text="10:00PM"
                          android:layout_marginEnd="10dp" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm5"
                          style="@style/style_btn_time_reserved"
                          android:text="10:30PM"
                          android:layout_marginEnd="10dp"/>

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm6"
                          style="@style/style_btn_time_reserved"
                          android:text="11:00PM"/>
                  </TableRow>
                  <TableRow android:gravity="center_horizontal"
                      android:layout_marginTop="10dp">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm7"
                          style="@style/style_btn_time_unreserved"
                          android:text="11:30PM"
                          android:layout_marginEnd="10dp" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_pm8"
                          style="@style/style_btn_time_reserved"
                          android:text="12:00PM"
                          android:layout_marginEnd="10dp"/>

                  </TableRow>
              </TableLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/cv_morning"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="8dp"
              app:cardElevation="8dp"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="10dp">
              <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="155dp"
                      android:src="@drawable/img_blue_wave"
                      android:scaleType="centerCrop"
                      android:foreground="#C9FFFFFF"/>
              </FrameLayout>
              <TableLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="26dp"
                  android:layout_marginHorizontal="12dp">
                  <TableRow android:gravity="center_horizontal">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am1"
                          style="@style/style_btn_time_reserved"
                          android:text="8:30AM"
                          android:layout_marginEnd="10dp" />
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am2"
                          style="@style/style_btn_time_unreserved"
                          android:text="9:00AM"
                          android:layout_marginEnd="10dp"/>
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am3"
                          style="@style/style_btn_time_clicked"
                          android:text="9:30AM"/>
                  </TableRow>
                  <TableRow android:gravity="center_horizontal"
                      android:layout_marginTop="10dp">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am4"
                          style="@style/style_btn_time_unreserved"
                          android:text="10:00AM"
                          android:layout_marginEnd="10dp" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am5"
                          style="@style/style_btn_time_reserved"
                          android:text="10:30AM"
                          android:layout_marginEnd="10dp"/>

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am6"
                          style="@style/style_btn_time_reserved"
                          android:text="11:00AM"/>
                  </TableRow>
                  <TableRow android:gravity="center_horizontal"
                      android:layout_marginTop="10dp">
                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am7"
                          style="@style/style_btn_time_unreserved"
                          android:text="11:30AM"
                          android:layout_marginEnd="10dp" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/btn_time_am8"
                          style="@style/style_btn_time_reserved"
                          android:text="12:00AM"
                          android:layout_marginEnd="10dp"/>
                      
                  </TableRow>

              </TableLayout>
          </androidx.cardview.widget.CardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginStart="26dp"
              android:textSize="18sp"
              android:fontFamily="@font/roboto_medium"
              android:textColor="@color/navyBlue2"
              android:text="@string/lbl_booking_date"/>
          <FrameLayout
              android:paddingHorizontal="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginHorizontal="5dp">
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <androidx.cardview.widget.CardView
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/cv_appoitment"
                      android:layout_width="match_parent"
                      android:layout_height="84dp"
                      app:cardCornerRadius="8dp"
                      app:cardBackgroundColor="#E8F2F5">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:paddingStart="100dp"
                          android:orientation="vertical">
                          <TextView
                              android:id="@+id/tv_date_int"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/skyBlue"
                              android:textSize="24sp"
                              android:fontFamily="@font/roboto_medium"
                              android:text="24"/>
                          <TextView
                              android:id="@+id/tv_day"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#9BABB1"
                              android:textSize="11sp"
                              android:fontFamily="@font/roboto_regular"
                              android:text="Wendesdey"/>
                          <TextView
                              android:id="@+id/tv_date"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#9BABB1"
                              android:textSize="11sp"
                              android:fontFamily="@font/roboto_regular"
                              android:text="Wed 24 Aug , 1:30PM"/>

                      </LinearLayout>
                  </androidx.cardview.widget.CardView>
              </androidx.constraintlayout.widget.ConstraintLayout>
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <com.makeramen.roundedimageview.RoundedImageView
                      android:id="@+id/iv_doctor_image"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_width="79dp"
                      android:layout_height="107dp"
                      app:riv_corner_radius="8dp"
                      android:layout_marginStart="5dp"
                      android:scaleType="centerCrop"
                      android:src="@drawable/doctor" />
              </androidx.constraintlayout.widget.ConstraintLayout>

          </FrameLayout>

          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_ok"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginHorizontal="36dp"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="30dp"
              style="@style/style_btn_clicked"
              android:text="@string/txt_btn_ok" />

      </LinearLayout>
    </ScrollView>
</LinearLayout>