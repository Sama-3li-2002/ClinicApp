<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DoctorDetailsScreen">
    <ImageView
        android:layout_width="11dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="19dp"
        android:layout_weight="1"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/tvdimo"
        android:layout_width="144dp"
        android:layout_height="24dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_medium"
        android:text="DOCTOR NAME "
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="66dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape"
        android:src="@drawable/icc" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_card"
            android:layout_width="343dp"
            android:layout_height="132dp"
            android:layout_below="@+id/tvdimo"
            android:layout_centerHorizontal="true"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="78dp"
                    android:layout_height="195dp"
                    android:background="#1C95C0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_doctor_image"

                    android:layout_width="115dp"
                    android:layout_height="171dp"
                    android:src="@drawable/detialslogo"
                    app:layout_constraintBottom_toBottomOf="@id/view"
                    app:layout_constraintEnd_toEndOf="@id/view"
                    app:layout_constraintStart_toStartOf="@id/view"
                    app:layout_constraintTop_toTopOf="@id/view" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="#E3F2F8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="100dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/tv_date_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="24"
                        android:textColor="#1C95C0"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Wendesdey"
                        android:textColor="#9BABB1"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Wed 24 Aug , 1:30PM"
                        android:textColor="#9BABB1"
                        android:textSize="11sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_dimo3"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:layout_below="@+id/cv_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="About As"
            android:textColor="@color/skyBlue" />

    <TextView
        android:id="@+id/tv_dimo4"
        android:layout_width="334dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_dimo3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Lorem ipsum dolor si amet, consectetur elit, seddo eiusmod tempor incididunt ut ero labore elit dolore magna aliqua. Uit enim iad minim veniam, nostrud exercitation pojriti laboris nrisi aliqeuip commodos consequat"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_dimo5"
        android:layout_width="174dp"
        android:layout_height="26dp"
        android:layout_below="@+id/tv_dimo4"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:fontFamily="@font/roboto_bold"
        android:text="Educational Degree"
        android:textColor="@color/skyBlue" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_card2"
            android:layout_width="301dp"
            android:layout_height="78dp"
            android:layout_below="@+id/tv_dimo4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon" />

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:text="It Started Working Since 1988" />
            </LinearLayout>

            <View
                android:layout_width="299dp"
                android:layout_height="2dp"
                android:layout_marginTop="35dp"
                android:background="#E3F2F8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/view"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon" />

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:text="Master" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_dimo6"
        android:layout_width="174dp"
        android:layout_height="26dp"
        android:layout_below="@+id/cv_card2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Educational Degree"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card3"
        android:layout_width="301dp"
        android:layout_height="78dp"
        android:layout_below="@+id/tv_dimo6"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon8" />

            <TextView
                android:layout_width="155dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:text="It Started Working Since 1988" />
        </LinearLayout>

        <View
            android:layout_width="299dp"
            android:layout_height="2dp"
            android:layout_marginTop="35dp"
            android:background="#E3F2F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon9" />

            <TextView
                android:layout_width="155dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:text="Master" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


      <Button
          android:id="@+id/btn_Appointment"
          android:layout_width="300dp"
          android:layout_height="48dp"
          android:layout_below="@id/cv_card3"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:backgroundTint="#1C95C0"
          android:text="Appointment Booking"
          android:textColor="#F8F8F8"
          android:textSize="22sp" />

</RelativeLayout>
